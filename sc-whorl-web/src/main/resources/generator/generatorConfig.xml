<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="application.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="mergeable" value="false"></property>
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="senunit.system.commons.MyMapper"/>
        </plugin>

        <jdbcConnection driverClass="${druid.driver-class}"
                        connectionURL="${druid.url}"
                        userId="${druid.username}"
                        password="${druid.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="senunit.logic.domain.model.orders"
                            targetProject="C:\work\workspace\sen-unit\sen-unit-web\src\main\java" />
        <sqlMapGenerator targetPackage="mapper.orders"
                         targetProject="C:\work\workspace\sen-unit\sen-unit-web\src\main\resources" />
        <javaClientGenerator targetPackage="senunit.logic.domain.dao.orders"
                             targetProject="C:\work\workspace\sen-unit\sen-unit-web\src\main\java" type="XMLMAPPER" >
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="groups">
            <!--mysql 配置-->
            <generatedKey column="pid" sqlStatement="Mysql" identity="true"/>
            <!--oracle 配置-->
            <!--<generatedKey column="id" sqlStatement="select SEQ_{1}.nextval from dual" identity="false" type="pre"/>-->
        </table>
        <table tableName="groupfunction">
            <!--mysql 配置-->
            <generatedKey column="pid" sqlStatement="Mysql" identity="true"/>
            <!--oracle 配置-->
            <!--<generatedKey column="id" sqlStatement="select SEQ_{1}.nextval from dual" identity="false" type="pre"/>-->
        </table>
        <table tableName="functions">
            <!--mysql 配置-->
            <generatedKey column="pid" sqlStatement="Mysql" identity="true"/>
            <!--oracle 配置-->
            <!--<generatedKey column="id" sqlStatement="select SEQ_{1}.nextval from dual" identity="false" type="pre"/>-->
        </table>
    </context>
</generatorConfiguration>